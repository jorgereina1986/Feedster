<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trending_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/trending" />

        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="#Trending"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/trending_item0"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/trending_item1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/trending_item2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/trending_item3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/trending_item4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="sans-serif-thin"
            android:textSize="20dp" />

    </LinearLayout>


</android.support.v7.widget.CardView>

