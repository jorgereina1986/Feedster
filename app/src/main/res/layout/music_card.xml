<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/music_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/artists" />

        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="Top Songs"
            android:textSize="40dp" />

        <include
            android:id="@+id/music_item_0"
            layout="@layout/music_item" />

        <include
            android:id="@+id/music_item_1"
            layout="@layout/music_item" />

        <include
            android:id="@+id/music_item_2"
            layout="@layout/music_item" />

        <include
            android:id="@+id/music_item_3"
            layout="@layout/music_item" />

        <include
            android:id="@+id/music_item_4"
            layout="@layout/music_item" />


    </LinearLayout>


</android.support.v7.widget.CardView>
